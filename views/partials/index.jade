p There are {{posts.length}} posts
div(ng-repeat='post in posts')
  h3 
    a(href='/readPost/{{post.id}}') {{post.title}} 
  h4 &emsp;{{post.authorName}}
  div &emsp;{{post.text}}
  .switch(ng-switch='displayType')
    .switch(ng-switch-when='logged')
      .links
        | &emsp;
        a(href='/readPost/{{post.id}}') Read
        |  - 
        a(href='/editPost/{{post.id}}') Edit
        |  - 
        a(href='/deletePost/{{post.id}}') Delete